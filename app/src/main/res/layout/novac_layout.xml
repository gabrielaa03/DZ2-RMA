<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/novac1"
    android:background="@color/lightgrey">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/konverterNovca"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>

    <Spinner
        android:id="@+id/spinnerNovac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_spinner"
        android:layout_below="@+id/text1"
        android:background="@drawable/okvir"
        android:layout_marginTop="30dp"
        ></Spinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNovac"
        android:padding="@dimen/obicni_margin"
        android:hint="Unesi iznos:"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:layout_below="@+id/spinnerNovac"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/nButton"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/tKonvertiraj"

        />


</RelativeLayout>


