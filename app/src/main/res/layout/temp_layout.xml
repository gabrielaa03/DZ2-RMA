<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/temp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue">
    <Spinner
        android:id="@+id/konverzijaTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="24dp"
        >
    </Spinner>

    <EditText
        android:id="@+id/iznosTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Unesi temperaturu"
        android:layout_below="@+id/konverzijaTemperature"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="24dp"
/>
      <ImageButton
        android:id="@+id/bTemperatura"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ibtermometar"

        />
</RelativeLayout>
